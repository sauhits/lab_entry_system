{
  "manifest_version": 3,
  "name": "Shizuoka Univ.-CS GPA & Lab Assistant",
  "version": "2.2",
  "description": "Calculates a special GPA and assists with lab applications by scraping grade data from the Gakujo portal.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://gakujo.shizuoka.ac.jp/lcu-web/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://gakujo.shizuoka.ac.jp/lcu-web/SC_10004B00_01"],
      "js": ["content_script.js"]
    }
  ]
}
